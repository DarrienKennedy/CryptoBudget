<AnchorPane fx:id="ac" maxHeight="Infinity" maxWidth="Infinity" xmlns="http://javafx.com/javafx/9.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="sample.AddTransactionController" style="-fx-background-color: #4E878C;">
    <AnchorPane fx:id="ac2" maxHeight="Infinity" maxWidth="Infinity" prefHeight="400.0" prefWidth="600.0" style="-fx-background-color: #4E878C;"
                xmlns="http://javafx.com/javafx/9.0.1" xmlns:fx="http://javafx.com/fxml/1">
        <children>
            <Label layoutX="245.0" layoutY="19.0" text="Add Transaction" textFill="WHITE" />
            <Button layoutX="14.0" layoutY="2.0" mnemonicParsing="false" prefHeight="25.0"
                    onAction="#goToViewTransactions" text="Back" />

            <JFXTextField fx:id="imagePathField" labelFloat="true" focusColor="BLACK" layoutX="143.0" layoutY="50.0" unFocusColor="WHITE" promptText="Image Path" />
            <Button fx:id="ocrButton" layoutX="300.0" layoutY="50.0" mnemonicParsing="false" onAction="#useOCR" text="Scan Image" />
            <ImageView fx:id="receiptImage" layoutX="400.0" layoutY="50.0" fitHeight="400" fitWidth="300" />

            <JFXTextField fx:id="amountField" labelFloat="true" focusColor="BLACK" layoutX="143.0" layoutY="100.0" unFocusColor="WHITE" promptText="Amount" />
            <JFXTextField fx:id="currencyField" labelFloat="true" focusColor="BLACK" layoutX="143.0" layoutY="150.0" unFocusColor="WHITE" promptText="Currency" />
            <JFXDatePicker fx:id="datePicker" defaultColor="#14f5de" layoutX="143.0" layoutY="200.0" promptText="Date" />
            <JFXTextField fx:id="otherPartyField" labelFloat="true" focusColor="BLACK" layoutX="143.0" layoutY="250.0" unFocusColor="WHITE" promptText="Other Party" />

            <fx:define>
                <ToggleGroup  fx:id="group" />
            </fx:define>
            <RadioButton text="Payment" toggleGroup="$group" layoutX="143.0" layoutY="300.0" fx:id="payment" selected="true"/>
            <RadioButton text="Income" toggleGroup="$group" layoutX="221.0" layoutY="300.0" fx:id="income"/>

            <Label fx:id="errorLabel" layoutX="143.0" layoutY="325.0" textFill="yellowgreen" />
            <Button layoutX="143.0" layoutY="350.0" mnemonicParsing="false" onAction="#manualLog" text="Create" />

        </children>
    </AnchorPane>

</AnchorPane>
